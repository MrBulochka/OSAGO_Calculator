<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:textColor="@color/main_100"
        android:textStyle="bold"
        tools:text="БТ"/>

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textTitle"
        app:layout_constraintBottom_toBottomOf="@id/textTitle"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        android:textSize="12sp"
        android:textColor="@color/main_30"
        tools:text="(базовый тариф)"/>

    <TextView
        android:id="@+id/textDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintEnd_toStartOf="@id/textValue"
        android:layout_marginEnd="16dp"
        android:textColor="@color/main_60"
        android:textSize="12sp"
        tools:text="Устанавливает страховая компания"/>

    <TextView
        android:id="@+id/textValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/main_100"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="2 754 - 4 432 ₽" />

</androidx.constraintlayout.widget.ConstraintLayout>