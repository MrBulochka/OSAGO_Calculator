<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_06">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/coefficient_cardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/start_guideline"
            app:layout_constraintEnd_toStartOf="@+id/end_guideline"
            app:layout_constraintBottom_toBottomOf="@id/coefficient_recycler"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="-16dp"/>

        <ImageView
            android:id="@+id/some_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_avatars"
            app:layout_constraintStart_toStartOf="@id/coefficient_cardView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/some_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/some_icon"
            app:layout_constraintTop_toTopOf="@+id/some_icon"
            android:layout_marginStart="12dp"
            android:textSize="12sp"
            android:textColor="@color/main_30"
            android:text="@string/your_coefficients"/>

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/some_text"
            app:layout_constraintBottom_toBottomOf="@+id/some_icon"
            android:text="@string/base_coefficients"
            android:textSize="16sp"
            android:textColor="@color/blue_100" />

        <ImageButton
            android:id="@+id/expand_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/some_icon"
            app:layout_constraintBottom_toBottomOf="@id/some_icon"
            app:layout_constraintEnd_toEndOf="@id/coefficient_cardView"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_open"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/coefficient_recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/some_icon"
            app:layout_constraintStart_toStartOf="@id/coefficient_cardView"
            app:layout_constraintEnd_toEndOf="@+id/coefficient_cardView"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:visibility="gone"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/data_cardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/coefficient_cardView"
            app:layout_constraintStart_toStartOf="@+id/start_guideline"
            app:layout_constraintEnd_toStartOf="@+id/end_guideline"
            app:layout_constraintBottom_toBottomOf="@+id/data_recycler"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="-16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/data_recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toTopOf="@id/data_cardView"
            app:layout_constraintStart_toStartOf="@id/data_cardView"
            app:layout_constraintEnd_toEndOf="@id/data_cardView"
            app:layout_constraintBottom_toTopOf="@id/someView"
            app:layout_constraintVertical_chainStyle="spread_inside"
            android:layout_margin="16dp" />

        <View
            android:id="@+id/someView"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            app:layout_constraintTop_toBottomOf="@+id/data_recycler"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="26dp"
            android:background="@color/white"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calculate_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/start_guideline"
            app:layout_constraintEnd_toEndOf="@+id/end_guideline"
            app:layout_constraintTop_toTopOf="@+id/someView"
            app:layout_constraintBottom_toBottomOf="@id/someView"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_inactive"
            android:text="@string/calculate_OSAGO"
            android:textColor="@color/main_20"
            android:textAllCaps="false"
            android:clickable="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>